<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaClipboard.ViewModels"
             xmlns:interfaces="clr-namespace:AvaloniaClipboard.Models.Interfaces"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaClipboard.Views.MainTabs.HandManageTab"
             x:Name="MainControl"
             x:DataType="viewModels:MainWindowViewModel">
    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    <ListBox 
        ItemsSource="{Binding ClipboardHotkeyManager.BoardManager.Boards}">
        <ListBox.ItemTemplate>
            <DataTemplate DataType="interfaces:IBoard">
                <Grid ColumnDefinitions="2*,5*,3*">
                    <TextBlock Grid.Column="0" Text="{Binding Name, Mode=TwoWay}"/>
                    <TextBox Grid.Column="1" Text="{Binding Data, Mode=TwoWay}"/>
                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal">
                        <Button 
                            Content="До локального буферу"
                            Command="{Binding 
                            #MainControl.((viewModels:MainWindowViewModel)DataContext).ClipboardHotkeyManager.SetTextFromClipBoard}"
                            CommandParameter="{Binding Name}"/>
                        <Button 
                            Content="До глобального буферу"
                            Command="{Binding 
                            #MainControl.((viewModels:MainWindowViewModel)DataContext).ClipboardHotkeyManager.SetTextToClipboard}"
                            CommandParameter="{Binding Name}"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
